<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/enter_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="@dimen/enter_field_text_size"
        android:gravity="bottom|end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/button_clear"
        app:layout_constraintEnd_toEndOf="@id/button_divide"
        app:layout_constraintVertical_bias="0.5"
        android:text="@string/enter_field_text" />

    <Button
        android:id="@+id/button_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/button_clear"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintEnd_toStartOf="@id/button_backspace"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_field"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_backspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/enter_field"
        app:layout_constraintStart_toEndOf="@id/button_clear"
        app:layout_constraintEnd_toStartOf="@id/button_square_root"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_margin="8dp"
        android:text="@string/backspace" />

    <Button
        android:id="@+id/button_square_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/enter_field"
        app:layout_constraintStart_toEndOf="@id/button_backspace"
        app:layout_constraintEnd_toStartOf="@id/button_divide"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_margin="8dp"
        android:text="@string/square_root" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/enter_field"
        app:layout_constraintStart_toEndOf="@id/button_square_root"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_margin="8dp"
        android:text="@string/divide" />

    <Button
        android:id="@+id/button_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/button_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_8"
        android:layout_margin="8dp"
        android:text="@string/button_7" />

    <Button
        android:id="@+id/button_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_backspace"
        app:layout_constraintStart_toEndOf="@id/button_7"
        app:layout_constraintEnd_toStartOf="@id/button_9"
        android:layout_margin="8dp"
        android:text="@string/button_8" />

    <Button
        android:id="@+id/button_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_square_root"
        app:layout_constraintStart_toEndOf="@id/button_8"
        app:layout_constraintEnd_toStartOf="@id/button_multiple"
        android:layout_margin="8dp"
        android:text="@string/button_9" />

    <Button
        android:id="@+id/button_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_divide"
        app:layout_constraintStart_toEndOf="@id/button_9"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/button_multiple" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/button_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_5"
        android:layout_margin="8dp"
        android:text="@string/button_4" />

    <Button
        android:id="@+id/button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_8"
        app:layout_constraintStart_toEndOf="@id/button_4"
        app:layout_constraintEnd_toStartOf="@id/button_6"
        android:layout_margin="8dp"
        android:text="@string/button_5" />

    <Button
        android:id="@+id/button_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_9"
        app:layout_constraintStart_toEndOf="@id/button_5"
        app:layout_constraintEnd_toStartOf="@id/button_minus"
        android:layout_margin="8dp"
        android:text="@string/button_6" />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_multiple"
        app:layout_constraintStart_toEndOf="@id/button_6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/button_minus" />

    <Button
        android:id="@+id/button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/button_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_2"
        android:layout_margin="8dp"
        android:text="@string/button_1" />

    <Button
        android:id="@+id/button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_5"
        app:layout_constraintStart_toEndOf="@id/button_1"
        app:layout_constraintEnd_toStartOf="@id/button_3"
        android:layout_margin="8dp"
        android:text="@string/button_2" />

    <Button
        android:id="@+id/button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_6"
        app:layout_constraintStart_toEndOf="@id/button_2"
        app:layout_constraintEnd_toStartOf="@id/button_plus"
        android:layout_margin="8dp"
        android:text="@string/button_3" />

    <Button
        android:id="@+id/button_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_minus"
        app:layout_constraintStart_toEndOf="@id/button_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/button_plus" />

    <Button
        android:id="@+id/button_extended_func"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_0"
        android:layout_margin="8dp"
        android:text="@string/button_ext_func" />

    <Button
        android:id="@+id/button_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_2"
        app:layout_constraintStart_toEndOf="@id/button_extended_func"
        app:layout_constraintEnd_toStartOf="@id/button_point"
        android:layout_margin="8dp"
        android:text="@string/button_0" />

    <Button
        android:id="@+id/button_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_3"
        app:layout_constraintStart_toEndOf="@id/button_0"
        app:layout_constraintEnd_toStartOf="@id/button_equal"
        android:layout_margin="8dp"
        android:text="@string/button_point" />

    <Button
        android:id="@+id/button_equal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttons_text_size"
        app:layout_constraintTop_toBottomOf="@id/button_plus"
        app:layout_constraintStart_toEndOf="@id/button_point"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:text="@string/button_equal" />

</androidx.constraintlayout.widget.ConstraintLayout>